<p id="notice"><%= notice %></p>

<h1><%= MiningType.model_name.human(count: @mining_types.count) %></h1>

<table class="table table-hover">
  <thead>
    <tr>

      <th colspan="3"></th>
    </tr>
      <th> <%=  Coin.human_attribute_name(:description) %></th>
      <th> <%=  Coin.human_attribute_name(:acronym) %>
      </th>
  </thead>

  <tbody>
    <% @mining_types.each do |mining_type| %>
      <tr>
        <td><%= mining_type.description %></td>
        <td><%= mining_type.acronym %></td>
        <td><%= link_to t('links.show'), mining_type, class:"btn btn-primary" %></td>
        <td><%= link_to t('links.edit'), edit_mining_type_path(mining_type), class:"btn btn-warning"  %></td>
        <td><%= link_to t('links.delet'), mining_type, method: :delete, data: { confirm: t('Are you sure?') }, class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('New Mining Type'), new_mining_type_path, class:"btn btn-primary" %>
</br>
</br>
