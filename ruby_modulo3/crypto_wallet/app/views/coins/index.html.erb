

<p id="notice"><%= notice %></p>

<h1>Coins</h1>
<h2><%= cookies[:curso]%></h1>
<h2><%= session[:curso]%></h1>
<table>
  <thead>
    <tr>
      <th><%= @coins.human_attribute_name(:description) %> </th>
      <th><%= @coins.human_attribute_name(:acronym) %> </th>
      <th><%= @coins.human_attribute_name(:url_image) %> </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coins.each do |coin| %>
      <tr>
        <td><%= coin.description %></td>
        <td><%= coin.acronym %></td>
        <td><%= image_tag coin.url_image, size: "50x50" %></td>
        <td><%= link_to t('links.show'), coin %></td>
        <td><%= link_to  t('links.edit'), edit_coin_path(coin) %></td>
        <td><%= link_to  t('links.delet'), coin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Coin', new_coin_path %>
