    <%= form.label :url_image %>
    <%= form.text_field :url_image, class:"form-control", placeholder: "PNG" %>
      
  </div>

  <div class="form-group mb-2">
<%= form.select("mining_type_id",  @mining_type_options,  { include_blank: "select"}) %>
